<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="680.0" prefWidth="900.0" stylesheets="@stylesheets/basicLayoutStyle2.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="680.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox prefHeight="65.0" prefWidth="900.0" style="-fx-background-color: D3D3D3;">
               <children>
                  <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="38.0" prefWidth="797.0">
                    <buttons>
                        <Button fx:id="newTransferButton" mnemonicParsing="false" onAction="#newTransferPressed" text="New Transfer" />
                        <Button fx:id="newExpenseButton" mnemonicParsing="false" onAction="#newExpensePressed" text="New Expense" />
                        <Button fx:id="newIncomeButton" mnemonicParsing="false" onAction="#newIncomePressed" text="New Income" />
                    </buttons>
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </ButtonBar>
                  <Separator orientation="VERTICAL" prefHeight="38.0" prefWidth="0.0" style="-fx-background-color: A9A9A9;" styleClass="colored-separator" />
                  <AnchorPane prefHeight="38.0" prefWidth="98.0">
                     <children>
                        <Label fx:id="balanceLabel" alignment="CENTER" prefHeight="38.0" prefWidth="98.0" text="Balance" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <TableView fx:id="transactionTable" prefHeight="644.0" prefWidth="900.0">
              <columns>
                <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="Category" />
                <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Amount" />
                <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
